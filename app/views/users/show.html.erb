<section class="user">

    <%= profile_image(@user) %>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %> member since <%= @user.created_at.strftime("%B %Y") %></h2>
    <% if current_user?(@user) %>
        <div class="actions">
            <% if current_user?(@user) %>
            <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
    <% end %>
    </div>
        <% end %>
            <% if current_user_admin? %>
            <div class="actions">
                <%= link_to "Delete Account", user_path(@user), class: "button edit", 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
        <% end %>
        <div class="reviews">
            <div class="details">
                <span class="title">
                    <%= profile_image(r.user, 35) %>
                    <%= link_to r.movie.title, r.movie %>
                </span>
                <%= pluralize(r.stars, 'star') %>
                <span class="title">
                    <%= time_ago_in_words(@user.created_at) %> ago
                </span>
                <p>&bull; "<%= r.comment %>"</p>
            </div>
        </div>
    <% end %>
    <% end %>
</section>
